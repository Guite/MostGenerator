application "SimpleTest" {
    documentation "Just a simple test application."
    vendor "Acme"
    author "Michael Smith"
    email "info@example.org"
    url "http://example.org"
    prefix "simtest"
    skipFiles "
        composer.json,
        Resources/views/Article/delete.html.twig
    "
    markFiles "
        AcmeSimpleTestBundle.php,
        Resources/views/Article/detail.html.twig
    "
    entities {
        entity "article" leading {
            nameMultiple "articles"
            displayPattern "#title#"
            fields {
                string "title" {
                    sluggablePosition 1
                    length 200
                }
            }
            actions {
                indexAction "Index",
                detailAction "Detail",
                deleteAction "Delete"
            }
        },
        entity "image" {
            nameMultiple "images"
            displayPattern "#title#"
            fields {
                string "title" {
                    sluggablePosition 1
                    length 200
                }
            }
            actions {
                indexAction "Index"
            }
        }
    }
}
