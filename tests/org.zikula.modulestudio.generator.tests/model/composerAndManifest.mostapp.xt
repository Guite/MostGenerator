application "SimpleTest" {
    documentation "Just a simple test application."
    vendor "Acme"
    author "Michael Smith"
    email "info@example.org"
    url "http://example.org"
    prefix "simtest"
    entities {
        entity "article" leading {
            nameMultiple "articles"
            displayPattern "#title#"
            fields {
                string "title" {
                    sluggablePosition 1
                    length 200
                }
            }
            actions {
                mainAction "Index"
            }
        },
        entity "image" {
            nameMultiple "images"
            displayPattern "#title#"
            fields {
                string "title" {
                    sluggablePosition 1
                    length 200
                }
            }
            actions {
                mainAction "Index"
            }
        }
    }
}
