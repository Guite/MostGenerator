        entity "article" leading {
            nameMultiple "articles"
            displayPattern "#title#"
            lockType NONE
            fields {
                string "title" {
                    sluggablePosition 1
                    length 200
                }
            }
            actions {
                mainAction "Index"
            }
        },
        entity "image" {
            nameMultiple "images"
            displayPattern "#title#"
            changeTrackingPolicy DEFERRED_EXPLICIT
            fields {
                string "title" {
                    sluggablePosition 1
                    length 200
                }
            }
            actions {
                mainAction "Index"
            }
        }
    }
}
